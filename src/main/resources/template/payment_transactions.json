{
  "id": "payment_transactions",
  "readable_name": "Количество платежных транзакций",
  "prometheus_query": "sum(sum_over_time(ebm_payments_count{terminal_id=~\"${terminal_id}\",provider_id=~\"${provider_id}\",shop_id=~\"${shop_id}\"}[${transactions_period_minutes}m])) OR on() vector(0) ${boundary_type} ${transaction_num_threshold}",
  "alert_name_template": "Количество платежных транзакций у провайдера ${provider_id}, терминала ${terminal_id} и магазина ${shop_id} за последние ${transactions_period_minutes} минут ${boundary_type} ${transaction_num_threshold}",
  "alert_notification_template": "Количество платежных транзакций у провайдера ${provider_id}, терминала ${terminal_id} и магазина ${shop_id} за последние ${transactions_period_minutes} минут ${boundary_type} ${transaction_num_threshold}! Текущее значение: {{ $value }}",
  "parameters": [
    {
      "id": 1,
      "substitution_name": "provider_id",
      "readable_name": "Введите идентификатор провайдера (опционально)",
      "mandatory": false,
      "dictionary_name": "providers"
    },
    {
      "id": 2,
      "substitution_name": "terminal_id",
      "readable_name": "Введите идентификатор терминала (опционально)",
      "mandatory": false,
      "dictionary_name": "terminals"
    },
    {
      "id": 3,
      "substitution_name": "shop_id",
      "readable_name": "Введите идентификатор магазина (опционально)",
      "mandatory": false,
      "dictionary_name": "shops"
    },
    {
      "id": 4,
      "substitution_name": "boundary_type",
      "readable_name": "Выберите тип условия для алерта",
      "mandatory": true,
      "dictionary_name": "boundaries"
    },
    {
      "id": 5,
      "substitution_name": "conversion_rate_threshold",
      "readable_name": "Введите порог конверсии в процентах (Пример: 85)",
      "mandatory": true,
      "regexp": "^[0-9][0-9]?$|^100$"
    },
    {
      "id": 6,
      "substitution_name": "conversion_period_minutes",
      "readable_name": "Период в минутах, за который необходимо проверять конверсию (Пример: 60)",
      "mandatory": true,
      "regexp": "^\\d+$"
    }
  ]

}